<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CadastroServlet</servlet-name>
        <servlet-class>controle.servlet.CadastroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarServlet</servlet-name>
        <servlet-class>controle.servlet.EditarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarServlet</servlet-name>
        <servlet-class>controle.servlet.BuscarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirServlet</servlet-name>
        <servlet-class>controle.servlet.ExcluirServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controle.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarTudoServlet</servlet-name>
        <servlet-class>controle.servlet.ListarTudoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarMsgServlet</servlet-name>
        <servlet-class>controle.servlet.ListarMsgServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApagarMsgServlet</servlet-name>
        <servlet-class>controle.servlet.ApagarMsgServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroServlet</servlet-name>
        <url-pattern>/CadastroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarServlet</servlet-name>
        <url-pattern>/EditarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarServlet</servlet-name>
        <url-pattern>/BuscarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirServlet</servlet-name>
        <url-pattern>/ExcluirServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarTudoServlet</servlet-name>
        <url-pattern>/ListarTudoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarMsgServlet</servlet-name>
        <url-pattern>/ListarMsgServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApagarMsgServlet</servlet-name>
        <url-pattern>/ApagarMsgServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
